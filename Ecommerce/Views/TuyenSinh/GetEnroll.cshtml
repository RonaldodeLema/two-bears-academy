 @using EcommerceCore
 @using NuGet.Protocol
 @model List<EcommerceCore.ViewModel.TuyenSinh.EnrollViewModel>
 <h2>Kanban Board</h2>
 <div class="row">
        @foreach (SysEnum.StatusEnroll status in Enum.GetValues(typeof(SysEnum.StatusEnroll)))
        {
            <div id="todo" class="column col-md p-3" style="margin: 0 5px 5px 0">
            @{
                var statusCode = (int)status; // Cast the enum to an integer
            }
                <h5 id="@statusCode">@status.GetEnumDisplayName()</h5>
                @foreach (var enroll in Model)
                {
                    @foreach (var historyStatus in enroll.HistoryEnrolls.Where(history => history.IsActive).Select(history => history.StatusEnroll))
                    {
                        if (Enum.IsDefined(typeof(SysEnum.StatusEnroll), historyStatus) &&
                            (SysEnum.StatusEnroll)historyStatus == status)
                        {
                            <div class="card bg-light" lead="@enroll.Lead.ToJson()" status-code="@historyStatus" enroll-id="@enroll.EnrollId" id="@enroll.Lead.LeadId">
                                <div class="row">
                                    <div class="col-10">
                                        <h6>@enroll.Lead.Name</h6>
                                        <p>SDT: @enroll.Lead.Phone</p>
                                    </div>
                                    <div class="col-2">
                                        <a class="btn btn-default show-history" data="@enroll.HistoryEnrolls.OrderByDescending(h=>h.CreatedAt).ToJson()">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                                <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        }
        @* Add more column belows *@
    </div>
    <!-- Modal Confirm delete -->
 <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
     <div class="modal-dialog" role="document">
         <div class="modal-content">
             <div class="modal-header">
                 <h5 class="modal-title" id="confirmModalLabel">Bạn có chắc thay đổi trạng thái khách hàng này?</h5>
                 <button type="button" data-bs-dismiss-="modal" aria-label="Close">
                     <span aria-hidden="true">×</span>
                 </button>
             </div>
             <div class="modal-body" id="confirm-body">
                 
             </div>
             <div class="modal-footer">
                 <button type="button" class="btn btn-secondary" id="confirmClose">Cancel</button>
                 <button type="button" id="confirmButton" class="btn btn-primary">Move Task</button>
             </div>
         </div>
     </div>
 </div>
 <!-- Modal Confirm delete -->
     <div class="modal fade" id="showHistoryModal" tabindex="-1" role="dialog" aria-labelledby="showHistoryModalLabel" aria-hidden="true">
         <div class="modal-dialog" role="document">
             <div class="modal-content">
                 <div class="modal-header">
                     <h5 class="modal-title" id="showHistoryModalLabel">Lịch sử thay đổi</h5>
                     <button type="button" data-bs-dismiss-="modal" aria-label="Close">
                         <span aria-hidden="true">×</span>
                     </button>
                 </div>
                 <div class="modal-body" id="content-history">
                 </div>
                 <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                 </div>
             </div>
         </div>
     </div>
