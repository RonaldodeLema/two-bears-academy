@model EcommerceCore.ViewModel.LoginViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
	string logoUrl = "logo.png";
}
<div class="p-0">
	<div class="login-card">
		<form novalidate asp-action="Login" method="post" class="theme-form login-form">
			<div class="text-center">
				<img src="~/@logoUrl" style="max-width:10rem" />
			</div>
			<h4 class="text-warning"> @(Model == null? string.Empty : Model.ErrorMessage)</h4>
			<div class="form-group">
				<label>Email</label>
				<div class="input-group">
					<span class="input-group-text"><i class="icon-email"></i></span>
					<input asp-for="Email" type="text" required class="form-control" placeholder="Email">
				</div>
			</div>
			<div class="form-group">
				<label>Mật khẩu</label>
				<div class="input-group">
					<span class="input-group-text"><i class="icon-lock"></i></span>
					<input asp-for="Password" type="password" required class="form-control" placeholder="Mật khẩu">

				</div>

			</div>
			<div class="row">
				<div class="col-6">
					<div class="checkbox">
						<input asp-for="Remember" type="checkbox" id="basic_checkbox_1">
						<label for="basic_checkbox_1">Ghi nhớ</label>
					</div>
				</div>
				<div class="col-12 text-center">
					<button type="submit" class="btn btn-primary btn-block">ĐĂNG NHẬP</button>
				</div>
			</div>
		</form>
	</div>
</div>

