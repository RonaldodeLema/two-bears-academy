@model IEnumerable<EcommerceCore.ViewModel.ProductHistory.ProductHistoryViewModel>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h5>Viewed Products</h5>
                </div>
                <div class="card-body">
                    <div class="order-history ">
                        <div id="basic-1_wrapper" class="dataTables_wrapper no-footer">
                            <div class="dataTables_length" id="basic-1_length"></div><table class="table table-bordernone display dataTable no-footer" id="basic-1" role="grid" aria-describedby="basic-1_info">
                                <thead>
                                    <tr role="row">
                                        <th scope="col" class="sorting" tabindex="0" aria-controls="basic-1" rowspan="1" colspan="1" aria-label="Price: activate to sort column ascending" style="width: 170px;"> Images</th>
                                        <th scope="col" class="sorting" tabindex="0" aria-controls="basic-1" rowspan="1" colspan="1" aria-label="Price: activate to sort column ascending" style="width: 170px;">Product Name</th>
                                        <th scope="col" class="sorting" tabindex="0" aria-controls="basic-1" rowspan="1" colspan="1" aria-label="Price: activate to sort column ascending" style="width: 170px;">Created At</th>
                                </thead>
                                <tbody>
                                    @if (Model.Count() > 0 || Model != null)
                                    {
                                        foreach (var productHistory in Model)
                                        {
                                            <tr role="row" class="odd">
                                                <td class="sorting_1">
                                                    <div>
                                                        <a href="@Url.Action("Index", "ProductEndUser", new {id =productHistory.ProductId})">
                                                            <img style="width:40%"
                                                                 src="@productHistory.Product.ProductImages.FirstOrDefault().Image.Url" />
                                                        </a>
                                                    </div>
                                                </td>
                                                <td class="sorting_1">
                                                    <div><a href="@Url.Action("Index", "ProductEndUser", new {id =productHistory.ProductId})">@productHistory.Product.Name</a></div>
                                                </td>
                                                <td>
                                                    <div class="product-name">
                                                        <a href="#">@productHistory.CreatedAt</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        //
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>